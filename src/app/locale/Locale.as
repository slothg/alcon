package locale{	/**	 * @author Sascha Balkau	 */	public class Locale	{		////////////////////////////////////////////////////////////////////////////////////////		// Properties                                                                         //		////////////////////////////////////////////////////////////////////////////////////////				private static var _instance:Locale;						////////////////////////////////////////////////////////////////////////////////////////		// Public Methods                                                                     //		////////////////////////////////////////////////////////////////////////////////////////				/**		 * Creates a new instance of the class.		 */		public function Locale()		{			if (_instance)			{				throw new Error("Tried to instantiate Locale through"					+ " it's constructor. Use Locale.instance instead!");			}		}						////////////////////////////////////////////////////////////////////////////////////////		// Getters & Setters                                                                  //		////////////////////////////////////////////////////////////////////////////////////////				/**		 * Returns the Singleton instance of Locale.		 */		public static function get instance():Locale		{			if (!_instance) _instance = new Locale();			return _instance;		}	}}