package view{	import mx.controls.MenuBar;	import mx.events.MenuEvent;				/**	 * MainMenu Class	 * @author Sascha Balkau <sascha@hexagonstar.com>	 */	public class MainMenu extends MenuBar	{		////////////////////////////////////////////////////////////////////////////////////////		// Properties                                                                         //		////////////////////////////////////////////////////////////////////////////////////////				private var _menuXML:XMLList =			<>				<menuitem label="Log" id="log">					<menuitem label="Pause" type="check" toggled="false" id="pause"/>					<menuitem label="Clear" id="clear"/>					<menuitem label="Reset" id="reset"/>					<menuitem type="separator" id="separator"/>					<menuitem label="Options..." id="options"/>					<menuitem type="separator" id="separator"/>					<menuitem label="Exit" id="exit"/>				</menuitem>				<menuitem label="Edit" id="edit">					<menuitem label="Copy Output" id="copyOutput"/>					<menuitem label="Copy Output as HTML" id="copyOutputAsHTML"/>				</menuitem>				<menuitem label="View" id="view">					<menuitem label="Display Keywords" type="check" toggled="true" id="displayKeywords"/>					<menuitem label="Display MTASC Trace Origins" type="check" toggled="false" id="displayTraceOrigins"/>					<menuitem type="separator" id="separator"/>					<menuitem label="Stay on Top" type="check" id="stayOnTop"/>				</menuitem>				<menuitem label="Help" id="help">					<menuitem label="Help..." id="help"/>					<menuitem label="About..." id="about"/>				</menuitem>			</>;						////////////////////////////////////////////////////////////////////////////////////////		// Public Methods                                                                     //		////////////////////////////////////////////////////////////////////////////////////////				/**		 * Creates a new MainMenu instance.		 */		public function MainMenu()		{			super();		}						/**		 * init		 */		public function init():void		{			callLater(setToggledMenuItems);		}						////////////////////////////////////////////////////////////////////////////////////////		// Getters & Setters                                                                  //		////////////////////////////////////////////////////////////////////////////////////////						////////////////////////////////////////////////////////////////////////////////////////		// Event Handlers                                                                     //		////////////////////////////////////////////////////////////////////////////////////////				/**		 * @private		 */		private function onMenuItemClick(e:MenuEvent):void		{		}						////////////////////////////////////////////////////////////////////////////////////////		// Private Methods                                                                    //		////////////////////////////////////////////////////////////////////////////////////////				/**		 * createChildren		 * @private		 */		override protected function createChildren():void		{			super.createChildren();						percentWidth = 100;			labelField = "@label";			dataProvider = _menuXML;			addEventListener(MenuEvent.ITEM_CLICK, onMenuItemClick);		}						/**		 * @private		 */		private function setToggledMenuItems():void		{		}	}}